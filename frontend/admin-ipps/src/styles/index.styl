*
  margin: 0
  padding: 0
  -webkit-box-sizing: border-box
  box-sizing: border-box
  outline: none
  list-style: none
  word-wrap: break-word

body
  font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial,sans-serif

#app
  height: 100vh

.layout
  display: flex
  flex-direction: row
  height: 100%
  width: 100%
  .sidebar
    min-width: 210px
    height: 100%
  main
    width: 100%
    height: 100%
    .header
      min-height: 50px
    .app-main
      height: calc(100% - 50px)
      width: 100%
      padding: 20px
      overflow-y: auto
  

