.navbar
  position: relative
  min-height: 50px
  z-index: 1000
  &.navbar-default
    width: 100%
    padding: 10px 0
    background: #fff
    box-shadow: -1px 1px 1px rgba(20, 97, 255, 0.1)
    transition: all 0.4s ease-in-out
    -webkit-transition: all 0.4s ease-in-out
    .content
      display: flex
      justify-content: space-between
      align-items: center
      height: 50px
      .logo
        height: 100%
        padding-right: 15px
        .navbar-brand
          display: block
          font-size: 30px
          letter-spacing: 1px
          font-weight: 800
          text-transform: uppercase
          color: #fff
          font-family: 'Roboto', sans-serif
        img
          height: 100%
      .main-menu
        position: relative
        ul.nav
          display: flex
          font-size: 1rem
          font-weight: 600
          > li
            position: relative
            padding: 0 10px
            transition: opacity 0.2s
            a
              color: #fff
            &.active
              opacity: 0.7
            &:hover
              cursor: pointer
              opacity: 0.5
  &.navbar-fixed
    position: fixed
    right: 0
    left: 0
  &.menu-top
    background: rgba(0, 0, 0, 0) none repeat scroll 0 0  

.navbar-default.menu-shrink
  background-color: #fff
  box-shadow: 0px 5px 10px rgba(20, 97, 255, 0.1)
  .content 
    .logo .navbar-brand
      color: #222
    .main-menu
      ul.nav li a
        color: #222
        &.active
          color: #1461ff

.popover
  position: relative
  .navlist
    color: #6772e5
    text-transform: uppercase
    font-weight: 600
    li
      padding: 8px 0

.nav
  .sub-nav
    display: none
    position: absolute
    top: 70px
    background: #fff
    padding: 16px 32px
    border-radius: 6px
    box-shadow:
      0 50px 100px -20px rgba(50,50,93,.25),
      0 30px 60px -30px rgba(0,0,0,.3);
    li
      color: #222
  li:hover
    .sub-nav
      display: block

:root {
  --padding: 16px 32px;
  --transition-speed: 0.3s;
  --products-width: 490px;
  --products-height: 280px;
  --developers-width: 390px;
  --developers-height: 266px;
  --company-width: 260px;
  --company-height: 296px;
}

.popover
  position: relative
  .content
    position: absolute;
    overflow: hidden;
    z-index: 1;
    top: 0;
    left: 0;
    opacity: 0;
    padding: var(--padding);
    transition:
      transform var(--transition-speed),
      opacity var(--transition-speed);

.open .content {
  opacity: 1;
}

.open .background {
  opacity: 1;
}

.background {
  position: absolute;
  top: 60px;
  left: 0;
  width: var(--products-width);
  height: var(--products-height);
  opacity: 0;
  padding: var(--padding);
  background: white;
  border-radius: 6px;
  box-shadow:
    0 50px 100px -20px rgba(50,50,93,.25),
    0 30px 60px -30px rgba(0,0,0,.3);
  transform-origin: 0 0;
  transition:
    transform var(--transition-speed),
    opacity var(--transition-speed);
}

.section {
  position: absolute;
  opacity: 0;
  transition: opacity 0.2s;
  overflow: hidden;
}

.section.active {
  opacity: 1;
}

/* Products Popover ----------------------------- */

.section-products {
  width: var(--products-width);
  height: var(--products-height);
}

.navlist-primary li {
  display: flex;
  padding: 16px 0;
}

.circle {
  flex: 0 0 48px;
  width: 48px;
  height: 48px;
  border-radius: 50%;
}

.circle.small {
  flex: 0 0 24px;
  width: 24px;
  height: 24px;
}

.navlist-primary-payments h3 { color: #6772E4; }
.navlist-primary-billing h3 { color: #23B47E; }
.navlist-primary-connect h3 { color: #3297D3; }

.navlist-primary-payments .circle { background: #87BBFD; } 
.navlist-primary-billing .circle { background: #74E3A2; } 
.navlist-primary-connect .circle { background: #68D4F8; } 

.navlist-primary-text {
  flex: 1 1 auto;
  margin-left: 24px;  
}

.navlist-primary h3 {
  text-transform: uppercase;
  margin-bottom: 5px;
  line-height: 22px;
  letter-spacing: 0.025em;
  font-weight: 600;
}

.navlist-primary p {
  font-size: 14px;
  line-height: 22px;
  color: #7b8ca3;
}

/* Developers Popover --------------------------------- */

.section-developers {
  width: var(--developers-width);
  height: var(--developers-height);
}

.section-developers .navlist {
  margin-top: 10px;
}

.subtle {
  color: #7b8ca3;
  font-size: 14px;
  margin: 3px 0 32px 0;
}

.two-col {
  display: grid;
  grid-template-columns: 1fr 1fr;
}

