@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&display=swap&subset=cyrillic,cyrillic-ext,latin-ext')
@import url('https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i&display=swap&subset=cyrillic,cyrillic-ext,latin-ext');

*
  margin: 0
  padding: 0
  -webkit-box-sizing: border-box
  box-sizing: border-box
  outline: none
  list-style: none
  word-wrap: break-word

body
  font-family: 'Open Sans', sans-serif
  font-size: 14px
  line-height: 26px
  font-weight: 400
  letter-spacing: 0.5px
  color: #555
  overflow-x: hidden

h1,
h2,
h3,
h4,
h5,
h6
  font-family: 'Roboto', sans-serif
	color: #222

p
  margin: 0

a
  text-decoration: none

ul
	padding: 0
	list-style: none

.container
  max-width: 1200px
  height: 100%
  margin: 0 auto
  padding: 0 15px

.col-1-3
  max-width: calc(100% / 3)
  padding: 0 15px

.navbar
  position: relative
  min-height: 50px
  z-index: 1000
  .main-menu
    width: 100%
    height: 100%
    display: flex
    align-items: center
    justify-content space-between
    .logo
      padding-right: 15px
      .navbar-brand
        display: block
        font-size: 30px
        letter-spacing: 1px
        font-weight: 800
        text-transform: uppercase
        color: #fff
        font-family: 'Roboto', sans-serif  
    .nav.navbar-nav
      display: flex
      a
        display:  block
        padding: 0 10px
        color: #fff
        font-size: 16px
        font-weight: 500
        text-transform: capitalize

.navbar-default
  border: none
  border-radius: 0
  margin-bottom: 0
  width: 100%
  height: 70px
  padding: 20px 0
  background: #fff
  box-shadow: -1px 1px 1px rgba(20, 97, 255, 0.1)
  .main-menu
    .logo .navbar-brand,
    .nav.navbar-nav a
      color #222

.navbar-fixed-top
  position: fixed
  right: 0
  left: 0

.main-banner
  height: 700px
  .banner-content
    height: 100%
    max-width: 700px
    display: flex
    flex-direction: column
    align-items: baseline
    justify-content: center    
    span
      color: #1461ff
      font-size: 24px
      font-weight: 600
      background: #fff
      padding: 4px 18px
      border-radius: 5px
    h1
      font-size: 40px
      line-height: 42px
      font-weight: 500
      margin: 20px 0 5px
      color: #fff
    p
      color: #fff
    .banner__social-link
      display: flex
      margin-top: 25px
      .social-link
        margin-right: 15px
        color: #fff
        border: 1px solid #fff
        width: 40px
        height: 40px
        line-height: 40px
        border-radius: 50%
        text-align: center
        display: inline-block
        font-size: 14px
        transition: .5s
      .social-link:hover
        color: #1461ff
        background: #fff

.banner
  width: 100%
  position: relative
  z-index: 1
  background-image: url(../images/banner.jpg)
  background-size: cover
  background-position: center center
.main-banner:before
  content: ""
  position: absolute
  right: 0
  bottom: 0
  width: 100%
  height: 100%
  z-index: -1;
  background: -webkit-linear-gradient(-45deg,rgba(88, 195, 255,.7) 0,rgba(0, 77, 230,.7) 40%,rgba(0, 59, 177,.7) 100%)
.main-banner:after
  position: absolute
  content: ""
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0, 0.60)
  z-index: -2

.backgr-grey
  background: #fafafa
.section-padding
  padding: 50px 0
  .section-header
    display: flex
    flex-direction: column
    padding-bottom: 30px
    h2
      font-size: 30px
      font-weight: 600
      color: #222
      margin-bottom: 15px
      text-transform: uppercase
    .small-border
      height: 2px
      width: 70px
      background-color: #1461ff
  .section-body
    display: flex
    flex-wrap: wrap

.news-container
  display: flex
  flex-direction: row
  .news-card
    display: flex
    flex-direction: column
    flex: 1 1 0px
    background: #fff
    box-shadow: 0 1px 30px rgba(0, 0, 0, 0.1)
    border-radius: 3px
    margin: 0 30px 30px 0
    .news-img
      position: relative
      width: 100%
      height: 246px
      img
        position: absolute
        top: 0
        left: 0
        max-width: 100%
        max-height: 100%
      .state
        display: flex
        padding: 5px 20px
        font-size: 12px
        position: absolute
        bottom: 0
        left: 0
        color: #fff
        background: rgba(0, 0, 0, 0.35)
        width: 100%;
        .state-item
          margin-right: 10px
        .state-comment
          span
            margin-left: 5px
    .news-info
      padding: 20px
      h4
        font-size: 18px
        line-height: 20px
        font-weight: 600
        margin-bottom: 10px
        a
          font-family: 'Roboto', sans-serif
          color: #444
        a:hover
          text-decoration: underline
      p
        font-size: 14px
        line-height: 18px
  .news-card:last-child
    margin-right: 0

.button-container
  display: flex
  width: 100%
  .button-item
    margin: auto
    .btn
      display: inline-block
      font-size: 14px
      font-weight: 600
    .btn.btn-main
      padding: 14px 32px
      color: #fff
      background: linear-gradient(-45deg,rgba(88, 195, 255,.8) 0,rgba(0, 77, 230,.8) 40%,rgba(0, 59, 177,.8) 100%)
      border-radius: 25px
      transition: all 0.4s ease-in-out 0s
    .btn.btn-main:hover
      color: #1461ff
      background: #fff
      box-shadow: #1461ff 0 0 0px 2px

.services-container
  display: flex
  flex-direction: row
  .service-item
    display: flex
    flex: 1 1 0px
    padding: 30px
    background: #fff
    margin-right: 30px
  .service-item:last-child
    margin-right: 0

.projects-container
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between
  .project-item
    position: relative
    display: flex
    width: 370px
    height 240px
    margin-bottom: 30px
    img
      position: absolute
      width: 100%
      height 100%
      top: 0
      left: 0
  .project-item:last-child
    margin-right: 0
  